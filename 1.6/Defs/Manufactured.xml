<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ==================== UNIVERSAL WORKBENCH ==================== -->
  <!-- Industrial-tier. Requires electricity. Operates at 50% crafting speed. -->
  <!-- Covers crafting/tailoring/machining/fabrication. No cooking or drugs.  -->

  <ThingDef ParentName="BenchBase">
    <defName>UniWorkbench</defName>
    <label>universal workbench</label>
    <description>An industrial electric workbench equipped to handle almost any manufacturing task. Its broad compatibility comes at a cost: it operates at only 50% of a dedicated bench's speed. Requires power to function.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/CraftingTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,4)</drawSize>
      <color>(1,1,1,1)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconColor>(255,255,255)</uiIconColor>
    <uiIconScale>1</uiIconScale>
    <uiIconPath>Things/CraftingTable_Icon</uiIconPath>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <!-- Steel + components to reflect its electric/industrial nature -->
    <costList>
      <Steel>500</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>10000</WorkToBuild>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <!-- 50% crafting speed relative to dedicated benches -->
      <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
    </statBases>
    <size>(1,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <paintable>true</paintable>
    </building>
    <comps>
      <!-- Power requirement -->
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>300</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <!-- Tool cabinet bonus still applies -->
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <modExtensions>
      <li Class="VEF.Buildings.RecipeInheritanceExtension">
        <inheritRecipesFrom>
          <!-- Crafting & stone -->
          <li>TableStonecutter</li>
          <li>TableSculpting</li>
          <!-- Tailoring -->
          <li>ElectricTailoringBench</li>
          <!-- Machining & fabrication -->
          <li>TableMachining</li>
          <li>FabricationBench</li>
          <!-- DLC: Biotech -->
          <li MayRequire="ludeon.rimworld.biotech">SubcoreEncoder</li>
          <li MayRequire="ludeon.rimworld.biotech">GeneAssembler</li>
          <li MayRequire="ludeon.rimworld.biotech">SubcoreRefineryBench</li>
        </inheritRecipesFrom>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- ==================== OMNIVERSAL WORKBENCH ==================== -->
  <!-- Spacer-tier. Requires electricity. Operates at 100% crafting speed. -->
  <!-- Covers every workbench including cooking and advanced DLC content.   -->

  <ThingDef ParentName="BenchBase">
    <defName>OmniWorkbench</defName>
    <label>omniversal workbench</label>
    <description>A pinnacle of manufacturing technology. This advanced fabrication platform seamlessly interfaces with every known production process without any loss of efficiency. Requires power to function.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/CraftingTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,4)</drawSize>
      <!-- Slightly blue tint to distinguish from the universal bench -->
      <color>(0.75,0.88,1.0,1)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconColor>(190,224,255)</uiIconColor>
    <uiIconScale>1</uiIconScale>
    <uiIconPath>Things/CraftingTable_Icon</uiIconPath>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <!-- High-end materials for a spacer-level bench -->
    <costList>
      <Steel>1000</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
      <ComponentSpacer>6</ComponentSpacer>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>20000</WorkToBuild>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <!-- Full 100% crafting speed â€” no penalty -->
    </statBases>
    <size>(1,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <paintable>true</paintable>
    </building>
    <comps>
      <!-- Higher power draw than the universal bench -->
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <modExtensions>
      <li Class="VEF.Buildings.RecipeInheritanceExtension">
        <inheritRecipesFrom>
          <!-- Crafting & stone -->
          <li>TableStonecutter</li>
          <li>TableSculpting</li>
          <!-- Tailoring -->
          <li>ElectricTailoringBench</li>
          <li>HandTailoringBench</li>
          <!-- Machining & fabrication -->
          <li>TableMachining</li>
          <li>FabricationBench</li>
          <!-- Drug synthesis -->
          <li>DrugLab</li>
          <!-- Cooking -->
          <li>ElectricStove</li>
          <li>FueledStove</li>
          <li>CampfireCooking</li>
          <!-- Butchering -->
          <li>TableButcher</li>
          <!-- DLC: Biotech -->
          <li MayRequire="ludeon.rimworld.biotech">SubcoreEncoder</li>
          <li MayRequire="ludeon.rimworld.biotech">GeneAssembler</li>
          <li MayRequire="ludeon.rimworld.biotech">SubcoreRefineryBench</li>
          <!-- DLC: Ideology -->
          <li MayRequire="ludeon.rimworld.ideology">Loom</li>
          <li MayRequire="ludeon.rimworld.ideology">BiofuelRefinery</li>
          <!-- DLC: Anomaly -->
          <li MayRequire="ludeon.rimworld.anomaly">MetalhorrorExtractorBench</li>
        </inheritRecipesFrom>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>
